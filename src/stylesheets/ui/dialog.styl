#dialog
  input, textarea
    margin: 4px 0px
    padding: 4px 7px
    border: #333
    background: #ffffff
    box-shadow(#222, 0, 1px, 14px, false, inset)
    &:focus
      outline: 0
      border: #444
      box-shadow(#222, 0, 1px, 6px, false, inset)
      background: #222
    &:hover
      border: #3a3a3a

  input, select
    width: 10em
  textarea
    width: 90%